<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="VirginProgress" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/virgin_200</item>
    </style>
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>
    <style name="LargeRedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="VirginSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/virgin_200</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

</resources>